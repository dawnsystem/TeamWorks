generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model comments {
  id            String          @id @default(cuid())
  contenido     String
  taskId        String
  userId        String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  tasks         tasks           @relation(fields: [taskId], references: [id], onDelete: Cascade)
  users         users           @relation(fields: [userId], references: [id], onDelete: Cascade)
  notifications notifications[]
}

model labels {
  id          String        @id @default(cuid())
  nombre      String
  color       String        @default("#808080")
  userId      String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  users       users         @relation(fields: [userId], references: [id], onDelete: Cascade)
  task_labels task_labels[]

  @@index([userId])
}

model notifications {
  id        String    @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String
  read      Boolean   @default(false)
  taskId    String?
  commentId String?
  projectId String?
  sectionId String?
  labelId   String?
  metadata  Json?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comments  comments? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  projects  projects? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     tasks?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  users     users     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, read])
}

model projects {
  id            String          @id @default(cuid())
  nombre        String
  color         String          @default("#808080")
  orden         Int             @default(0)
  userId        String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  notifications notifications[]
  users         users           @relation(fields: [userId], references: [id], onDelete: Cascade)
  sections      sections[]
  tasks         tasks[]
  shares        project_shares[]
}

model reminders {
  id        String   @id @default(cuid())
  fechaHora DateTime
  taskId    String
  enviado   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     tasks    @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model sections {
  id        String   @id @default(cuid())
  nombre    String
  orden     Int      @default(0)
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projects  projects @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     tasks[]

  @@index([projectId])
}

model task_labels {
  taskId  String
  labelId String
  labels  labels @relation(fields: [labelId], references: [id], onDelete: Cascade)
  tasks   tasks  @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@id([taskId, labelId])
}

model task_subscriptions {
  id        String   @id @default(cuid())
  taskId    String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     tasks    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  users     users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
  @@index([taskId])
  @@index([userId])
}

model task_templates {
  id          String   @id @default(cuid())
  titulo      String
  descripcion String?
  prioridad   Int      @default(4)
  userId      String
  labelIds    String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model tasks {
  id                 String               @id @default(cuid())
  titulo             String
  descripcion        String?
  prioridad          Int                  @default(4)
  fechaVencimiento   DateTime?
  completada         Boolean              @default(false)
  orden              Int                  @default(0)
  projectId          String
  sectionId          String?
  parentTaskId       String?
  createdBy          String
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  comments           comments[]
  notifications      notifications[]
  reminders          reminders[]
  task_labels        task_labels[]
  task_subscriptions task_subscriptions[]
  tasks              tasks?               @relation("tasksTotasks", fields: [parentTaskId], references: [id], onDelete: Cascade)
  other_tasks        tasks[]              @relation("tasksTotasks")
  projects           projects             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sections           sections?            @relation(fields: [sectionId], references: [id])

  @@index([projectId, sectionId])
  @@index([parentTaskId])
  @@index([createdAt])
  @@index([orden])
}

model users {
  id                 String               @id @default(cuid())
  email              String               @unique
  password           String
  nombre             String
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  comments           comments[]
  labels             labels[]
  notifications      notifications[]
  projects           projects[]
  task_subscriptions task_subscriptions[]
  task_templates     task_templates[]
  ownedShares        project_shares[]     @relation("ProjectShareOwner")
  sharedProjects     project_shares[]     @relation("ProjectShareUser")
  refreshTokens      refresh_tokens[]
}

model refresh_tokens {
  id         String    @id @default(cuid())
  userId     String
  token      String    @unique
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  lastUsedAt DateTime  @default(now())
  deviceInfo String?
  ipAddress  String?
  isRevoked  Boolean   @default(false)
  revokedAt  DateTime?
  user       users     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

enum ProjectShareRole {
  viewer
  editor
  manager
}

model project_shares {
  id           String           @id @default(cuid())
  projectId    String
  ownerId      String
  sharedWithId String
  role         ProjectShareRole @default(editor)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  project    projects @relation(fields: [projectId], references: [id], onDelete: Cascade)
  owner      users    @relation("ProjectShareOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  sharedWith users    @relation("ProjectShareUser", fields: [sharedWithId], references: [id], onDelete: Cascade)

  @@unique([projectId, sharedWithId])
  @@index([sharedWithId])
  @@index([ownerId])
}
