# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# Application
NODE_ENV=production

# Database Configuration
# ⚠️ SECURITY: Use strong passwords in production environments!
# Generate secure passwords: openssl rand -base64 32
POSTGRES_DB=teamworks
POSTGRES_USER=teamworks
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=3000
# JWT Configuration
JWT_SECRET=change-me-in-production-use-long-random-string
# Access token expiration (short-lived, default: 15m)
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
# Refresh token expiration in days (long-lived, default: 7 days)
JWT_REFRESH_TOKEN_EXPIRES_IN_DAYS=7

# Frontend Configuration
FRONTEND_PORT=8080

# AI Configuration (Optional)
GROQ_API_KEY=your-groq-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# AI Model Configuration (Optional)
GROQ_MODEL=llama-3.1-8b-instant
GEMINI_MODEL=gemini-1.5-flash

# AI Provider Selection (Optional - defaults to groq)
AI_PROVIDER=groq

# Intent Shield Thresholds (Optional)
# AI_INTENT_CONFIDENCE_THRESHOLD_EXECUTE: Auto-execute actions with confidence >= this value (default: 0.85)
AI_INTENT_CONFIDENCE_THRESHOLD_EXECUTE=0.85
# AI_INTENT_CONFIDENCE_THRESHOLD_SUGGEST: Suggest actions for confirmation with confidence >= this value (default: 0.6)
AI_INTENT_CONFIDENCE_THRESHOLD_SUGGEST=0.6

# Logging
LOG_LEVEL=info
