# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# Application
NODE_ENV=production

# Database Configuration
POSTGRES_DB=teamworks
POSTGRES_USER=teamworks
# SECURITY: Change this password in production!
# Generate with: openssl rand -base64 24
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=3000
# SECURITY: Generate a strong random secret with at least 32 characters
# Example: openssl rand -base64 32
# NEVER use this placeholder in production!
JWT_SECRET=change-me-in-production-use-long-random-string

# Frontend Configuration
FRONTEND_PORT=8080

# AI Configuration (Optional)
GROQ_API_KEY=your-groq-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# AI Model Configuration (Optional)
GROQ_MODEL=llama-3.1-8b-instant
GEMINI_MODEL=gemini-1.5-flash

# AI Provider Selection (Optional - defaults to groq)
AI_PROVIDER=groq

# Intent Shield Thresholds (Optional)
# AI_INTENT_CONFIDENCE_THRESHOLD_EXECUTE: Auto-execute actions with confidence >= this value (default: 0.85)
AI_INTENT_CONFIDENCE_THRESHOLD_EXECUTE=0.85
# AI_INTENT_CONFIDENCE_THRESHOLD_SUGGEST: Suggest actions for confirmation with confidence >= this value (default: 0.6)
AI_INTENT_CONFIDENCE_THRESHOLD_SUGGEST=0.6

# Logging
LOG_LEVEL=info
